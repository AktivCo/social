@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div>
        <form action="/home/login" style="  max-width: 500px;  margin-left: auto;  margin-right: auto;  margin-top: 10%;" class="form-horizontal" method="post">


            <div class="form-group">
                <label class="col-sm-2 control-label displayName" for="exampleInputEmail1">Логин</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="login" placeholder="Введите логин">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label displayName" for="exampleInputPassword1">Пароль</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="password" placeholder="Введите пароль">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" style="width:auto" value="Войти" class="btn btn-primary" />

                </div>

            </div>

        </form>

    </div>
</body>
</html>
